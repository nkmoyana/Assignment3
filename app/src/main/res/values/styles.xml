<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/header_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/login</item>
    </style>

    <style name="email_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/first_et_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="email_edit_text2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/screen_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="password_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/scan_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="name_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="temp_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/temp_margin_start</item>
        <item name="android:layout_marginTop">@dimen/scan_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/temp_margin_end</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="horizontal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_end</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/login_button_margin_end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="register_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/register_button_margin_start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">@string/register</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="top_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/btn_margin_top</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="forgot_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/first_et_margin_top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_marginTop">@dimen/image_margin_top</item>
    </style>

    <style name="scan_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/scan_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/scan_margin_bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/scan_barcode</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textSize">@dimen/scan_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/checkbox_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/check_margin_end</item>
    </style>

    <style name="names_text_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/checkbox_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/screen_margin_end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/names_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grade_text_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/checkbox_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/screen_margin_end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/grade_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="code_text_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/scan_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/checkbox_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/screen_margin_end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/scan_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="cardViewStyle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="vertical_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="date_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="temp_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/scan_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="question_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>